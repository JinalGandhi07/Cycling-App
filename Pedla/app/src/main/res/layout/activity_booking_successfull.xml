<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".OrderReview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/reviewOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:fontFamily="@font/antic"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Booking Successful"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/O1"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#C3EDEDED"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:fontFamily="@font/antic"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:text="From: 12/11/2020 To 13/11/2020"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/timings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/antic"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:text="12:00 PM (12 Nov) to 1:00 PM (13 Nov) "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/cimage1"
                        android:layout_margin="10dp"
                        android:src="@drawable/cone"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/cname1"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:text="Cycle 1"
                            android:textSize="22sp"
                            android:fontFamily="@font/antic"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/camount1"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:text="Paid Amount: Rs. 50/hr"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:id="@+id/accessories"
                        android:layout_margin="20dp"
                        android:src="@drawable/helmet"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/caccessoriesname"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:text="Accessories"
                            android:textSize="24sp"
                            android:fontFamily="@font/antic"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/camountaccessories"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:text="Paid Amount: Rs. 50/-"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalPay"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:paddingLeft="30dp"
                    android:text="Paid Total Amount: Rs. 100/-"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPay"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="Back To Home"
            android:background="#fece2f"
            />
    </LinearLayout>
</ScrollView>